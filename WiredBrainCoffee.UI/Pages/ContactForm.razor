@page "/Contact"

<PageTitle>
    Contact us
</PageTitle>

<div class="page-wrapper">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <Select TValue="string" SelectedValueChanged="@OnSelectedContactTypeChanged">
                    <SelectItem Value="@nameof(CustomerContact)">Customer</SelectItem>
                    <SelectItem Value="@nameof(PartnerContact)">Partner</SelectItem>
                </Select>
                <hr />
                <DynamicComponent Type="@ContactType"></DynamicComponent>
            </div>
            <div class="col-md-4">
                <ErrorBoundary>
                    <ChildContent>
                        <Chat />
                    </ChildContent>
                    <ErrorContent>
                        <Alert Color="Color.Danger" Visible>
                            <AlertMessage>Sorry!</AlertMessage>
                            <AlertDescription>
                                An error occured while trying to connect to an agent.
                                Please try again later.
                            </AlertDescription>
                        </Alert>
                    </ErrorContent>
                </ErrorBoundary>
                <hr />
                <MailingList />
                <hr />
                <ContactInfo />
            </div>
        </div>
    </div>
</div>
